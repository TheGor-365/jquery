<script type="text/javascript">

  $(document).ready(() => {

    $('.events-login-button').on('click', () => {
      $('.events-login-form').show();
    });

    $('.events-menu-button').on('mouseenter', () => {
      $('.events-nav-menu').show()
    })

    $('.events-nav-menu').on('mouseleave', () => {
      $('.events-nav-menu').hide();
    })

    $('.events-product-photo').on('mouseenter', event => {
      $(event.currentTarget).addClass('events-photo-active')
    }).on('mouseleave', event => {
      $(event.currentTarget).removeClass('events-photo-active')
    })

  });

</script>
